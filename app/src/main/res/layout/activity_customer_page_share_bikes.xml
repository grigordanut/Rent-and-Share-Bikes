<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_page_share_bikes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:context=".CustomerPageShareBikes"
        tools:showIn = "@layout/activity_customer_page_share_bikes">

        <TextView
            android:id="@+id/tvCustomPageShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_customPageShareBikes"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navViewCustomShare"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@drawable/drawer_item_color"
        app:itemTextAppearance="?android:textAppearanceMedium"
        app:headerLayout="@layout/customer_header_share_bikes"
        app:menu="@menu/menu_drawer_customer_share_bikes" />

</androidx.drawerlayout.widget.DrawerLayout>

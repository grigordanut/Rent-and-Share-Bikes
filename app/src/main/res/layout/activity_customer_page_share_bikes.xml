<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_customer_page_share_bikes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:context=".CustomerPageShareBikes">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:context=".CustomerPageShareBikes"
        tools:showIn = "@layout/activity_customer_page_share_bikes">

        <TextView
            android:id="@+id/tvCustomPageShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tv_customPageShareBikes"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCustomPageShareDetails"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCustomPageShare"
            android:text="@string/tv_customPageSharePersonalDetails"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCustomPageSharePerDetails"
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:layout_height="165dp"
            android:layout_below="@+id/tvCustomPageShareDetails"
            android:layout_marginStart="20dp"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:background="#f2f2f2"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:text="@string/tv_customPageSharePersonalDetails"
            android:textSize="24sp"
            tools:ignore="RtlSymmetry,TextViewEdits" />

        <TextView
            android:id="@+id/tvCustomPageShareAccount"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCustomPageSharePerDetails"
            android:text="@string/tv_customPageSharePersonalAccount"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/tvCustomShared"
            android:layout_width="240dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvCustomPageShareAccount"
            android:layout_alignStart="@+id/tvCustomPageShare"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"
            android:textColor="#000000"
            android:text="@string/tv_customPageBikesShared"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/tvCustomerBikesShared"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@+id/tvCustomPageShareAccount"
            android:layout_alignEnd="@+id/tvCustomPageShare"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:textColor="#000000"
            android:background="#ffffff"
            android:text="@string/tv_customPageBikesSharedAcc"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navViewCustomShare"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:itemTextColor="@drawable/drawer_item_color"
        app:itemTextAppearance="?android:textAppearanceMedium"
        app:headerLayout="@layout/customer_header_share_bikes"
        app:menu="@menu/menu_drawer_customer_share_bikes" />

</androidx.drawerlayout.widget.DrawerLayout>
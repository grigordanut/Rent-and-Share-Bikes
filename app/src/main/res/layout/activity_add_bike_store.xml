<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".AddBikeStore">

        <TextView
            android:id="@+id/textViewAddBike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:text="@string/tv_addBikeStore"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/locationWrapperBikeStore"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etLocationBikeStore"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/et_locationAddStore"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressWrapperBikeStore"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAddressBikeStore"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/et_addressAddStore"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nrSlotsWrapperBikeStore"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="10dp"
            android:textColorHint="#000000"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etNrSlotsBikeStore"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="@string/et_numberSlots"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingStart="10dp"
                android:textSize="20sp"
                tools:ignore="RtlSymmetry" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnSaveBikeStore"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:text="@string/btn_saveBikeStore"
            android:layout_gravity="center"
            android:textSize="24sp"
            tools:ignore="ButtonStyle"/>

    </LinearLayout>
</ScrollView>